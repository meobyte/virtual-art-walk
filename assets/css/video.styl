.container {
  display: flex;

  overflow: hidden;
}

.videos {
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.video {
  flex: 0 0 33%;
  overflow: hidden;
}

.video__inner {
  text-align: center;
  transition: 3s all;
}

.video__inner.playing {
  z-index: 1000;
  top: 0 !important;
  left: 0 !important;
  width: 100vw !important;
  background: $light-black;
}

.video__player {
  max-height: 100vh;
  width: 100%;
}
.fixed {
  position: fixed;
}

.video__overlay {
  height: 0;
  overflow: hidden;

  h2 {
    margin-top: 50%;
  }

  &.show {
    position: absolute;
    background:rgba(0,0,0,0.7);;
    width: 25%;
    animation: slide-down 2s forwards;
  }

  &.hide {
    animation: slide-up 3s forwards;
  }
}

@keyframes slide-down {
  0% {
    height: 0;
  }
  100% {
    height: 100%;
  }
}
@keyframes slide-up {
  0% {
    opacity: 1;
    height: 100%;
  }
  100% {
    opacity: 0;
    height: 0;
  }
}
