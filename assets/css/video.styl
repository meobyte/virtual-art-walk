.container {
  display: flex;
  overflow: hidden;
}

.videos {
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.video {
  position: relative;
  flex: 0 0 33%;
  overflow: hidden;
}

.video__inner {
  text-align: center;
  transition: 3s all;

  &.playing {
    z-index: 1000;
    top: 0 !important;
    left: 0 !important;
    width: 100vw !important;
    background: $light-black;
  }

  h1 {
    position: absolute;
    width: 100%;
    top: 30%;

    &.hide {
      animation: fade-out 2s forwards;
    }

    &.show {
      animation: fadeIn 2s forwards;
    }
  }
}

.video__player {
  max-height: 100vh;
  width: 100%;
}

.fixed {
  position: fixed;
}

.video__overlay {
  height: 0;
  overflow: hidden;

  h2 {
    margin-top: 50%;
  }

  &.show {
    position: absolute;
    background: alpha($black, 0.7);
    width: 25%;
    animation: slide-down 2s forwards;
  }

  &.hide {
    animation: slide-up 3s forwards;
  }
}

@keyframes slide-down {
  0% {
    height: 0;
  }
  100% {
    height: 100%;
  }
}
@keyframes slide-up {
  0% {
    opacity: 1;
    height: 100%;
  }
  100% {
    opacity: 0;
    height: 0;
  }
}

@keyframes fade-out {
  0% {
    opacity: 1;
  }
  100% {
    opacity: 0;
  }
}

@keyframes fadeIn {
  0% {
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
}
