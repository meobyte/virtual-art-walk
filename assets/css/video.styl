.container {
  display: flex;

  overflow: hidden;
}

.videos {
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.video {
  flex: 0 0 33%;
  overflow: hidden;
}

.video__inner {
  text-align: center;
  transition: 3s all;
}

.video__inner.playing {
  z-index: 1000;
  top: 0 !important;
  left: 0 !important;
  width: 100vw !important;
  background: $light-black;
}

.video__player {
  max-height: 100vh;
}
.fixed {
  position: fixed;
}

.video__overlay.show {
  position: absolute;
  background:rgba(0,0,0,0.7);;
  width: 25%;
  animation: slide-down 2s forwards;
}

@keyframes slide-down {
  0% {
    height: 0;
  }
  100% {
    height: 100%;
  }
}
